@model GroceryList.Models.Forms.HomeForm
@{
	ViewData["Title"] = "Add Home";
}
<div class="text-center">
    @*<h1>@ViewData["Title"]</h1>*@
	<h1 class="display-4">@ViewData["Title"]</h1>
	<p>Please create your Home here!</p>

	@if (TempData["ErrorMessage"] != null)
	{
	<h3>@TempData["ErrorMessage"]</h3>
	}
	@Html.ValidationSummary();
</div>

<form method="post">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>

	<div class="form-group">
		<label asp-for="Title" class="control-label"></label>
		<input asp-for="Title" class="form-control" autofocus>
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="CreatedBy" class="control-label">Your Name</label>
		<input asp-for="CreatedBy" class="form-control">@*this should only be readonly after creation*@
		<span asp-validation-for="CreatedBy" class="text-danger"></span>
	</div>
    
	<div class="form-group">
		<input type="submit" id="submit" name="submit" value="Add" class="btn btn-primary" />
		<input type="button" value="Cancel" class="btn btn-secondary"
				 onclick="location.href='@Url.GetHomeUrl(ViewContext)';" />
	</div>
</form>
